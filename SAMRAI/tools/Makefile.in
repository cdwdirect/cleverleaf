SAMRAI	      =	@top_srcdir@
SRCDIR	      =	@srcdir@
SUBDIR        = source
OBJECT        = ..

default: tools

include $(OBJECT)/config/Makefile.config

SUBDIRS = restart

tools:
	for DIR in $(SUBDIRS); do (cd $$DIR && $(MAKE) $@) || exit 1; done
clean:
	for DIR in $(SUBDIRS); do (cd $$DIR && $(MAKE) $@) || exit 1; done
