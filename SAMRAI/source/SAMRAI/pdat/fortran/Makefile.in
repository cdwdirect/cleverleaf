SAMRAI        = @top_srcdir@
SRCDIR        = @srcdir@
SUBDIR        = source/SAMRAI/pdat/fortran
VPATH         = @srcdir@
OBJECT        = ../../../..

default: library

include $(OBJECT)/config/Makefile.config

OBJS= 	pdat_concoarsen1d.o \
	pdat_concoarsen2d.o \
	pdat_concoarsen3d.o \
	pdat_conrefine1d.o \
	pdat_conrefine2d.o \
	pdat_conrefine3d.o \
	pdat_dbugfort1d.o \
	pdat_dbugfort2d.o \
	pdat_dbugfort3d.o \
	pdat_lintimint1d.o \
	pdat_lintimint2d.o \
	pdat_lintimint3d.o

library:	$(OBJS)

clean:
	$(CLEAN_COMMON_LIB_FILES)
	$(RM) *.f

include $(SRCDIR)/Makefile.depend

M4DIRS = -DFORTDIR=$(SRCDIR) $(SAMRAI_M4_FLAGS)

pdat_concoarsen1d.o:
	$(M4) $(M4DIRS) $(SRCDIR)/pdat_concoarsen1d.m4 > pdat_concoarsen1d.f
	$(F77) $(FFLAGS) -c pdat_concoarsen1d.f -o $@

