# Go to the top level SAMRAI directory and make sure we get there.
cd `dirname $0`/../.. || exit 1;
test -d "source/hierarchy/patches" || exit 1
pwd

rm -fr cscope.*
find . -name \*.[cChI] -type f > cscope.files
cscope -b -q -k
